<% flash.each do |name, msg| %>
<div class="alert alert-<%= name %>"><%= msg %></div>
<% end %>

<h1>Students</h1>

<table class="table table-striped">
  <thead>
    <tr align="center">
      <th>Name</th>
      <th>Age</th>
      <th>Grade</th>
      <th>Image</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
    <tr align="center">
      <td style="vertical-align: middle;"><%= student.name %></td>
      <td style="vertical-align: middle;"><%= student.age %></td>
      <td style="vertical-align: middle;"><%= student.grade %></td>
      <td style="vertical-align: middle;"><%= image_tag student.image, :style => "width:100px;height:100px;" %></td>
      <td style="vertical-align: middle;"><%= link_to 'Show', student, class: "btn btn-primary" %></td>
      <td style="vertical-align: middle;"><%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning" %></td>
      <td style="vertical-align: middle;"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<a href="<%= new_student_path %>" class="btn btn-primary rounded-circle" style="position:fixed!important;bottom:0!important;right:0!important;margin-bottom:10px;"><i class="material-icons" style="vertical-align: middle;font-size: 35px;">add</i></a>
