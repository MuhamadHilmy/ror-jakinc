  <!DOCTYPE html>
  <html>
  <head>
    <title>Ruby Mysql</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
    <style type="text/css">
      html {
        overflow-x: hidden!important;
        overflow-y: hidden!important;
      }
      body {
        overflow-x: hidden!important;
        overflow-y: hidden!important;
      }
      .login-panel{
        background-color: #0fbcf9;
        height: 370px;
        border-radius: 5%;        
      }
    </style>
  </head>

  <body id="body">    
    <nav class="navbar navbar-light" style="background-color: #0fbcf9">
      <a class="navbar-brand" href="" style="color: white">
        <%= image_tag 'ruby-white.png', width: "30", height: "30",class: "d-inline-block align-top" %>
        Ruby On Rails
      </a>
    </nav>
    <div class="container">
    	<%= yield %>
    </div>

  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' %>
  <%= javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.slim.min.js' %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js' %>
  <%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">
      var height = document.getElementById('body').offsetHeight;
      var css = height / 3.8;
      document.getElementById('login-panel').style.marginTop = css + "px";
    </script>
</body>
</html>