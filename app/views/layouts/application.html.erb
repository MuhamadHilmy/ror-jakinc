  <!DOCTYPE html>
  <html>
  <head>
    <title>Ruby Mysql</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
    <style type="text/css">
      html {
        overflow-x: hidden!important;
      }
      body {
        overflow-x: hidden!important;
      }
    </style>
  </head>

  <body>    
    <nav class="navbar navbar-light" style="background-color: #0fbcf9">
      <div>
        <a class="navbar-brand" href="" style="color: white">
          <%= image_tag 'ruby-white.png', width: "30", height: "30",class: "d-inline-block align-top" %>
          Ruby On Rails
        </a>
      </div>
      <div align="right">
        <%= link_to "<i class='material-icons' style='color:white'>input</i>".html_safe, logout_path, method: "delete" %>
      </div>
    </nav>      
    <div class="row">
      <div class="col-sm-3">
        <nav id="sidebar" style="width:85%">
          <div class="sidebar-header">
            <center>
                <% if current_user %>
              <div>
                <%= image_tag(current_user.image, class: "rounded-circle", style: "width: 100px;height:100px;background-color:black;margin-bottom:10px;") %>            
              </div>
              <div>
                <%= current_user.first_name %> <%= current_user.last_name %>
              </div>
                <% end %>
            </center>          
          </div>

          <ul class="list-unstyled">
            <% if request.original_url == "http://localhost:3000/students" %>
            <li class="active">
              <a href="<%= students_path %>" style="text-decoration: none;padding-left: 20px;padding-top: 10px"><i class="material-icons">school</i> Students</a>
            </li>
            <% else %>
            <li>
              <a href="<%= students_path %>" style="text-decoration: none;padding-left: 20px;padding-top: 10px"><i class="material-icons">school</i> Students</a>
            </li>
            <% end %>
            <% if request.original_url == "http://localhost:3000/blank" %>
            <li class="active">
              <a href="<%= blank_path %>" style="text-decoration: none;padding-left: 20px;padding-top: 10px"><i class="material-icons">school</i> Blank</a>
            </li>
            <% else %>
            <li>
              <a href="<%= blank_path %>" style="text-decoration: none;padding-left: 20px;padding-top: 10px"><i class="material-icons">school</i> Blank</a>
            </li>
            <% end %>
            <% if request.original_url == "http://localhost:3000/users/new" %>
            <li class="active">
              <a href="<%= new_user_path %>" style="text-decoration: none;padding-left: 20px;padding-top: 10px;"><i class="material-icons" >person</i> Admin</a>
            </li>
            <% else %>
            <li>
              <a href="<%= new_user_path %>" style="text-decoration: none;padding-left: 20px;padding-top: 10px"><i class="material-icons">person</i> Admin</a>
            </li>
            <% end %>
          </ul>
        </nav>        
      </div>
      <div class="col-sm-8">
        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' %>
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.slim.min.js' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js' %>
    <%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">
     $(document).ready(function(){
      $('.dates #usr1').datepicker({
        'format': 'yyyy-mm-dd',
        'autoclose': true
      });
      $('.alert').alert()
    });
  </script>
</body>
</html>
